@if (Movies == null)
{
    <img src="https://media3.giphy.com/media/3oEjI6SIIHBdRxXI40/200.gif" />
}
else if (Movies.Count == 0)
{
    <text>There are not records to show</text>
}
else
{
    <input type="checkbox" @onchange="@(()=> displayButtons = !displayButtons)" />
    @foreach (var movie in Movies)
    {
        <IndividualMovie Movie="movie" DisplayButtons="displayButtons" />
    }
}

@code {

    [Parameter] public List<Movie> Movies { get; set; }

    bool displayButtons = false;
}
